{
  "apiVersion": "1.0",
  "swaggerVersion": "1.2",
  "basePath": "/",
  "resourcePath": "user_api",
  "apis": [
    {
      "path": "api/v1/user/{id}.json",
      "operations": [
        {
          "summary": "取得指定使用者資料",
          "notes": "透過 access token 取得其擁有者的基本資料。需要 offline_access 權限，回傳資料因 access token 的 scope 而異。",
          "parameters": [
            {
              "paramType": "query",
              "name": "application_id",
              "type": "string",
              "description": "應用程式 ID",
              "required": true
            },
            {
              "paramType": "query",
              "name": "secret",
              "type": "string",
              "description": "應用程式密鑰",
              "required": true
            },
            {
              "paramType": "path",
              "name": "id",
              "type": "integer",
              "description": "使用者 ID",
              "required": true
            }
          ],
          "responseMessages": [
            {
              "code": 401,
              "message": "Unauthorized"
            },
            {
              "code": 404,
              "message": "Not Found 沒有此使用者"
            }
          ],
          "method": "get",
          "nickname": "Api::V1::UserApi#user_data"
        }
      ]
    },
